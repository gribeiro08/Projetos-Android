<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.Activity3"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:gravity="center"
    android:background="#f0ddee">

    <ImageView
        android:id="@+id/img_challenge"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@null"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btn_asw_1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=" "
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_retangulo_borda_arrendondada"/>

    <Button
        android:id="@+id/btn_asw_2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=" "
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_retangulo_borda_arrendondada"/>

    <Button
        android:id="@+id/btn_asw_3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=" "
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_retangulo_borda_arrendondada"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Resposta: "
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_asw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@null"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>